<h1>Add a Recipe </h1>

<%= simple_form_for [@category, @bookmark] do |f| %>
  <div>
    <%= f.association :recipe, prompt: "Select a recipe"%>
    <%= f.input :comment, placeholder: "Enter a comment about the dish"%>
    <%= f.submit "Add Recipe to Category" %>
  </div>

<% end %>

<%= link_to "Back to Category", category_path(@category) %>
